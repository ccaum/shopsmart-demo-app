{
  "name": "cdk-shopsmart",
  "version": "0.1.0",
  "bin": {
    "cdk-shopsmart": "bin/shopsmart.js"
  },
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "test": "jest",
    "test:integration": "jest --testPathPattern=integration",
    "test:e2e": "jest --testPathPattern=e2e",
    "test:performance": "echo 'Performance tests not configured'",
    "lint": "eslint . --ext .ts,.js",
    "lint:fix": "eslint . --ext .ts,.js --fix",
    "format": "prettier --write \"**/*.{ts,js,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,js,json,md}\"",
    "cdk": "cdk",
    "deploy": "./deploy-all.sh",
    "deploy:dev": "cdk deploy --all --require-approval never --context environment=dev",
    "deploy:staging": "cdk deploy --all --require-approval never --context environment=staging",
    "deploy:prod": "cdk deploy --all --require-approval never --context environment=production",
    "destroy:dev": "cdk destroy --all --force --context environment=dev",
    "destroy:staging": "cdk destroy --all --force --context environment=staging",
    "destroy:prod": "cdk destroy --all --force --context environment=production"
  },
  "devDependencies": {
    "@types/jest": "^29.4.0",
    "@types/node": "18.14.6",
    "jest": "^29.5.0",
    "ts-jest": "^29.0.5",
    "aws-cdk": "2.150.0",
    "ts-node": "^10.9.1",
    "typescript": "~4.9.5",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.45.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^5.0.0",
    "prettier": "^3.0.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.3"
  },
  "dependencies": {
    "aws-cdk-lib": "2.150.0",
    "@aws-cdk/lambda-layer-kubectl-v26": "^2.0.0",
    "constructs": "^10.0.0",
    "source-map-support": "^0.5.21"
  }
}
