# ShopSmart Database Configuration
# Copy this file to config.env and update with your actual values

# PostgreSQL Configuration (Product Catalog)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password
POSTGRES_DB=shopsmart_catalog

# AWS Configuration
AWS_REGION=us-east-1
AWS_PROFILE=default

# DynamoDB Configuration
# Leave DYNAMODB_ENDPOINT empty for AWS DynamoDB
# Set to http://localhost:8000 for local DynamoDB
DYNAMODB_ENDPOINT=

# Table naming
TABLE_PREFIX=shopsmart-dev

# Environment
ENVIRONMENT=dev
PROJECT_NAME=ShopSmart