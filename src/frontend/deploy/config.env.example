# Frontend Deployment Configuration
# Copy this file to config.env and update with your actual values

# Environment
ENVIRONMENT=production

# API Gateway URL for Authentication Service
AUTH_SERVICE_URL=https://your-api-gateway-id.execute-api.us-east-1.amazonaws.com/prod

# Product Catalog Service (EC2 ALB)
PRODUCT_SERVICE_URL=https://your-product-alb-123456789.us-east-1.elb.amazonaws.com

# Order Processing Service (ECS ALB)
ORDER_SERVICE_URL=https://your-order-alb-123456789.us-east-1.elb.amazonaws.com

# Deployment Target (s3 or ec2)
DEPLOYMENT_TARGET=s3

# S3 Configuration (if using S3 + CloudFront)
S3_BUCKET_NAME=your-frontend-bucket
CLOUDFRONT_DISTRIBUTION_ID=E1234567890ABC

# EC2 Configuration (if serving from EC2)
EC2_INSTANCE_IP=10.0.1.100
EC2_USER=ec2-user
EC2_KEY_PATH=~/.ssh/your-key.pem

# CORS Configuration
CORS_ALLOWED_ORIGINS=https://your-domain.com,https://www.your-domain.com